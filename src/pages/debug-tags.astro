---
import { getCollection } from "astro:content";

const posts = await getCollection("blog");
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>Debug Tags</title>
    <style>
      body {
        font-family: system-ui, sans-serif;
        max-width: 800px;
        margin: 2rem auto;
        padding: 1rem;
      }
      h1 {
        margin-bottom: 1rem;
      }
      table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 1rem;
      }
      th,
      td {
        border: 1px solid #ccc;
        padding: 0.5rem;
        text-align: left;
      }
      th {
        background: #f9f9f9;
      }
      code {
        background: #f4f4f4;
        padding: 0.2rem 0.4rem;
        border-radius: 4px;
      }
    </style>
  </head>
  <body>
    <h1>Debug: Blog Tags</h1>
    <p>
      This shows what <code>getCollection("blog")</code> is returning for each post.
    </p>

    <table>
      <thead>
        <tr>
          <th>Post ID</th>
          <th>Title</th>
          <th>Tags</th>
        </tr>
      </thead>
      <tbody>
        {
          posts.map((p) => (
            <tr>
              <td>
                <code>{p.id}</code>
              </td>
              <td>{p.data.title}</td>
              <td>
                <pre>{JSON.stringify(p.data, null, 2)}</pre>
              </td>
            </tr>
          ))
        }
      </tbody>
    </table>
  </body>
</html>
