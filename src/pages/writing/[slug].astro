---
import { type CollectionEntry, getCollection, render } from 'astro:content';
import BlogPost from '../../layouts/BlogPost.astro';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map((post) => {
    // Clean slug: strip both `/index.md` and `.md`
    const slug =
      post.slug ?? post.id.replace(/\/index\.md$/, '').replace(/\.md$/, '');

    // âœ… attach slug to post before passing as props
    return {
      params: { slug },
      props: { ...post, slug },
    };
  });
}

type Props = CollectionEntry<'blog'> & { slug: string };

const post = Astro.props;

// render(post) returns { Content, headings }
const { Content, headings } = await render(post);
---

<BlogPost post={post} headings={headings}>
  <Content />
</BlogPost>
