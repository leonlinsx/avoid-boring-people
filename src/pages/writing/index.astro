---
import BaseLayout from "../../layouts/BaseLayout.astro";
import PostCard from "../../components/PostCard.astro";
import { getCollection } from "astro:content";
import readingTime from "reading-time";

// Load all posts
const all = await getCollection("blog");

// Compute reading time + keep slug + sort newest first
const posts = all
  .map((p) => ({
    ...p,
    slug: p.slug, // âœ… keep slug for PostCard links
    data: {
      ...p.data,
      readingTime: Math.max(1, Math.round(readingTime(p.body ?? "").minutes)),
    },
  }))
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

// Category logic
const url = new URL(Astro.request.url);
const active = url.searchParams.get("category") ?? "All";

const categories = [
  "All",
  "Finance",
  "Tech",
  "Book Notes",
  "Movement",
  "Lifestyle",
];

const filtered =
  active === "All" ? posts : posts.filter((p) => p.data.category === active);
---

<BaseLayout
  title="Writing | Avoid Boring People"
  description="All essays and posts by Leon Lin on finance, tech, books, lifestyle, and more."
>
  <h1>Writing</h1>

  <!-- Category Filters -->
  <nav class="filters" aria-label="Filter posts by category">
    {
      categories.map((cat) => (
        <a
          href={`/writing?category=${encodeURIComponent(cat)}`}
          class={`filter-link ${active === cat ? "is-active" : ""}`}
        >
          {cat}
        </a>
      ))
    }
  </nav>

  <!-- Post List -->
  {filtered.map((post) => <PostCard post={post} />)}
</BaseLayout>

<style>
  .filters {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin: 0 0 1.5rem 0;
  }

  .filter-link {
    display: inline-block;
    padding: 0.35rem 0.75rem;
    border: 1px solid var(--color-border);
    border-radius: 999px;
    color: var(--color-text);
    text-decoration: none;
    font-size: 0.95rem;
    transition:
      color 0.2s,
      border-color 0.2s,
      background-color 0.2s;
  }

  .filter-link:hover {
    border-color: var(--color-link);
    color: var(--color-link);
  }

  .filter-link.is-active {
    background: var(--color-link);
    border-color: var(--color-link);
    color: #fff;
    font-weight: 600;
  }
</style>
