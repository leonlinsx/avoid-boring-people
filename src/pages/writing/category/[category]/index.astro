---
import { getCollection } from "astro:content";
import type { GetStaticPaths } from "astro";

// Generate static paths for each category
export const getStaticPaths: GetStaticPaths = async () => {
  const all = await getCollection("blog");

  const categories = Array.from(
    new Set(all.map((p) => p.data.category?.trim().toLowerCase() || ""))
  ).filter(Boolean);

  return categories.map((category) => ({
    params: { category },
    props: { category },
  }));
};

const { category } = Astro.props;
const redirectTo = `/writing/category/${category}/1`;
---

<html lang="en">
  <head>
    <meta http-equiv="refresh" content={`0; url=${redirectTo}`} />
    <title>Redirecting Category {category}</title>
  </head>
  <body>
    <p>
      Redirecting to <a href={redirectTo}>{redirectTo}</a>...
    </p>
  </body>
</html>
