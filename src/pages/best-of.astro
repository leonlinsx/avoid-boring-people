---
import BaseLayout from "../layouts/BaseLayout.astro";
import PostCard from "../components/PostCard.astro";
import { getCollection } from "astro:content";

// Load all posts from the blog collection
const allPosts = await getCollection("blog");

// Manually pick featured posts by slug (filenames without .md)
const featuredSlugs = ["cycles", "book-notes-sapiens", "tech-trends"];

const featured = allPosts.filter((post) => featuredSlugs.includes(post.slug));
---

<BaseLayout title="Best Of">
  <h1>Start Here</h1>
  <p>
    These are some of my favorite pieces — a good place to begin if you’re new
    here.
  </p>

  {featured.map((post) => <PostCard post={post} />)}
</BaseLayout>

<style>
  h1 {
    margin-bottom: 1rem;
  }

  p {
    margin-bottom: 2rem;
    font-size: 1.1rem;
    color: #555;
  }
</style>
