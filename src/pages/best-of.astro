---
import BaseLayout from "../layouts/BaseLayout.astro";
import PostCard from "../components/PostCard.astro";
import { getCollection } from "astro:content";

const allPosts = await getCollection("blog");

// Filter posts with featured: true
const featured = allPosts
  .filter((post) => post.data.featured)
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
---

<BaseLayout
  title="Best Of | Avoid Boring People"
  description="A handpicked collection of my favorite essays on finance, tech, and other ideas — start here if you’re new."
>
  <h1>Start Here</h1>
  <p class="subtext">
    Some of my favorite pieces — a good place to begin if you’re new here.
  </p>

  {featured.map((post) => <PostCard post={post} />)}
</BaseLayout>
