---
import { SITE_TITLE } from "../consts";

// Current path for active link styling
const currentPath = Astro.url.pathname;
---

<header>
  <nav>
    <!-- Logo (links to Home) -->
    <a href="/" class="site-logo" aria-label={SITE_TITLE}>
      <img src="/logos/substack_logo.png" alt={SITE_TITLE} />
    </a>

    <!-- Primary navigation -->
    <div class="nav-links">
      <a
        href="/writing"
        class={currentPath.startsWith("/writing") ? "active" : ""}>Writing</a
      >
      <a
        href="/best-of"
        class={currentPath.startsWith("/best-of") ? "active" : ""}>Best Of</a
      >
      <a
        href="/newsletter"
        class={currentPath.startsWith("/newsletter") ? "active" : ""}
        >Newsletter</a
      >
      <a href="/about" class={currentPath.startsWith("/about") ? "active" : ""}
        >About</a
      >
    </div>
  </nav>
</header>

<style>
  header {
    margin: 0;
    padding: 0.5rem 1rem;
    background: var(--color-bg);
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
  }

  nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
    max-width: 900px;
    margin: 0 auto;
  }

  /* Logo */
  .site-logo {
    display: flex;
    align-items: center;
    text-decoration: none;
  }

  .site-logo img {
    height: 32px;
    width: auto;
    display: block;
    transition: opacity 0.2s ease;
  }

  .site-logo:hover img {
    opacity: 0.85;
  }

  /* Navigation links */
  .nav-links {
    display: flex;
    gap: 1.5rem;
  }

  .nav-links a {
    padding: 1em 0.3em;
    color: var(--color-text);
    border-bottom: 3px solid transparent;
    text-decoration: none;
    font-weight: 500;
    transition:
      border-color 0.2s,
      color 0.2s;
  }

  .nav-links a:hover {
    color: var(--color-link);
  }

  .nav-links a.active {
    border-bottom-color: var(--color-link);
    font-weight: 600;
  }

  @media (max-width: 720px) {
    .nav-links {
      gap: 1rem;
      font-size: 0.95rem;
    }

    .site-logo img {
      height: 28px;
    }
  }
</style>
