---
// Import the global.css file here so that it is included on
// all pages through the use of the <BaseHead /> component.
import "../styles/global.css";
import {
  SITE_TITLE,
  SITE_DESCRIPTION,
  SITE_URL,
  SITE_OG_IMAGE,
} from "../consts";

interface Props {
  title: string;
  description: string;
  image?: string | { src: string }; // support string or image object
}

const canonicalURL = new URL(Astro.url.pathname, SITE_URL);
const { title, description, image } = Astro.props;

// Resolve OG image
let ogImage: string;

if (image) {
  if (typeof image === "string") {
    // Case 1: URL or relative string
    ogImage = image.startsWith("http")
      ? image
      : `${SITE_URL.replace(/\/$/, "")}${image}`;
  } else if (typeof image === "object" && "src" in image) {
    // Case 2: Astro content image object
    ogImage = `${SITE_URL.replace(/\/$/, "")}${image.src}`;
  } else {
    // Fallback in case something unexpected sneaks in
    ogImage = `${SITE_URL.replace(/\/$/, "")}${SITE_OG_IMAGE}`;
  }
} else {
  // Fallback
  ogImage = `${SITE_URL.replace(/\/$/, "")}${SITE_OG_IMAGE}`;
}
---

<!-- Global Metadata -->
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width,initial-scale=1" />

<!-- Preload Fonts (put before other <link> tags) -->
<link
  rel="preload"
  href="/fonts/atkinson-regular.woff"
  as="font"
  type="font/woff"
  crossorigin
/>

<!-- Favicons -->
<link rel="icon" href="/logos/substack_logo.png" type="image/png" />
<link rel="shortcut icon" href="/favicon.ico" />

<!-- Sitemap & RSS -->
<link rel="sitemap" href={`${SITE_URL}sitemap-index.xml`} />
<link
  rel="alternate"
  type="application/rss+xml"
  title={SITE_TITLE}
  href={`${SITE_URL}rss.xml`}
/>

<meta name="generator" content={Astro.generator} />

<!-- Canonical URL -->
<link rel="canonical" href={canonicalURL} />

<!-- Primary Meta Tags -->
<title>{title}</title>
<meta name="title" content={title} />
<meta name="description" content={description || SITE_DESCRIPTION} />

<!-- Open Graph -->
<meta property="og:type" content="website" />
<meta property="og:url" content={canonicalURL} />
<meta property="og:title" content={title} />
<meta property="og:description" content={description || SITE_DESCRIPTION} />
<meta property="og:image" content={ogImage} />

<!-- Twitter -->
<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:url" content={canonicalURL} />
<meta name="twitter:title" content={title} />
<meta name="twitter:description" content={description || SITE_DESCRIPTION} />
<meta property="twitter:image" content={ogImage} />
