---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import BaseHead from "../components/BaseHead.astro";

const { title, description, image } = Astro.props;
const GA_ID = import.meta.env.PUBLIC_GA_ID;
const isProd = import.meta.env.PROD;
---

<html lang="en">
  <head>
    <BaseHead title={title} description={description} image={image} />

    {isProd && GA_ID && (
      <>
        <script is:inline>
          // Only run GA if we’re on the production domain
          const allowedHost = "leonlins.com";
          if (location.hostname === allowedHost) {
            const gtagScript = document.createElement("script");
            gtagScript.async = true;
            gtagScript.src = `https://www.googletagmanager.com/gtag/js?id=${GA_ID}`;
            document.head.appendChild(gtagScript);

            window.dataLayer = window.dataLayer || [];
            function gtag(){dataLayer.push(arguments);}
            gtag("js", new Date());
            gtag("config", "{GA_ID}", { anonymize_ip: true });
          }
        </script>
      </>
    )}
  </head>
  <body>
    <!-- Site Header (full width) -->
    <Header currentPath={Astro.url.pathname} />

    <!-- Main content area (constrained width) -->
    <main class="page-main">
      <slot />
    </main>

    <!-- Site Footer -->
    <Footer />

    {isProd && GA_ID && (
      <script is:inline>
        // Page view tracking, but only on the production domain
        const allowedHost = "leonlins.com";
        if (location.hostname === allowedHost) {
          const sendPV = () => {
            if (!window.gtag) return;
            window.gtag("event", "page_view", {
              page_path: location.pathname + location.search,
              page_title: document.title
            });
          };
          window.addEventListener("astro:page-load", sendPV);
          window.addEventListener("astro:after-swap", sendPV);
        }
      </script>
    )}
  </body>
</html>

<style>
  .page-main {
    max-width: var(--max-content-width); /* ✅ use global variable */
    margin: var(--space-lg) auto;
    padding: 0 var(--space-md);
  }
</style>
